<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_registro_purisima"
    tools:context=".RegistroPurisimaFragment"
    android:background="@drawable/landscapefondo">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:gravity="left"
            android:layout_marginRight="20dp"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:gravity="center_vertical">
                <ImageView android:src="@drawable/nombre"
                    android:layout_marginRight="10dp"
                    android:layout_width="100sp"
                    android:layout_height="100sp"/>
                <EditText
                    android:id="@+id/etNombre"
                    android:textSize="18sp"
                    android:hint="Escribe tu nombre"
                    android:background="#F960B8"
                    android:inputType="textPersonName"/>
            </TableRow>
            <TableRow
                android:gravity="center_vertical">
                <ImageView android:src="@drawable/apellidos"
                    android:layout_marginRight="10dp"
                    android:layout_width="100sp"
                    android:layout_height="100sp"/>
                <EditText
                    android:id="@+id/etApellidos"
                    android:textSize="18sp"
                    android:hint="Escribe tus apellidos"
                    android:background="#FCFA9A"
                    android:inputType="textPersonName"/>
            </TableRow>
            <TableRow
                android:gravity="center_vertical">
                <ImageView android:src="@drawable/mail"
                    android:layout_marginRight="10dp"
                    android:layout_width="100sp"
                    android:layout_height="100sp"/>
                <EditText
                    android:id="@+id/etEmail"
                    android:textSize="18sp"
                    android:hint="Escribe tu correo: nombreprimerapellido@alu.lapurisimavalencia.com"
                    android:background="#62CDFB"
                    android:inputType="textEmailAddress"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <TextView
        android:layout_width="610dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text=""
        android:id="@+id/tvResult"
        android:layout_below="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

</RelativeLayout>
